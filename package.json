		"ejs": "^3.1.9",
		"electron": "29.1.0",
		"electron-playwright-helpers": "^1.7.0",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.25.0",
		"eslint-plugin-jest-dom": "^5.1.0",
