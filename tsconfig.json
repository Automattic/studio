{
	"compilerOptions": {
		"target": "ES6",
		"allowJs": true,
		"module": "commonjs",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "react-jsx",
		"strict": true,
		"paths": {
			"*": [ "node_modules/*" ]
		}
	},
	"include": [ "src/**/*", "./jest-setup.ts" ]
}
